<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projetinho.Views.PostView"
             Title="PostView">
    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Carregar postagens"/>
            <CollectionView>
                 <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <VerticalStackLayout>
                             <Label Text="{Binding title}"/>
                             <Label  Text="{Binding title}"/>
                        </VerticalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>